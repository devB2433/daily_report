FROM golang:1.21-alpine

# 安装必要的系统依赖和 air（用于热重载）
RUN apk add --no-cache gcc musl-dev && \
    go install github.com/cosmtrek/air@v1.49.0

WORKDIR /app

# 复制项目文件
COPY go.mod go.sum ./
RUN go mod download

# air 配置文件
COPY .air.toml ./

# 暴露端口
EXPOSE 8080

# 使用 air 运行应用（支持热重载）
CMD ["air", "-c", ".air.toml"] 