FROM golang:1.21-alpine

# 安装必要的系统依赖和 air（用于热重载）
RUN apk add --no-cache gcc musl-dev tzdata && \
    go install github.com/cosmtrek/air@v1.49.0

# 设置时区 - 首先尝试从互联网获取，如果失败则使用 Asia/Shanghai
RUN apk add --no-cache tzdata wget && \
    # 尝试从互联网获取时区
    { wget -qO- http://worldtimeapi.org/api/ip | grep -o '"timezone":"[^"]*"' | cut -d'"' -f4 > /etc/timezone; } || \
    # 如果获取失败，使用默认时区
    echo "Asia/Shanghai" > /etc/timezone && \
    cp /usr/share/zoneinfo/$(cat /etc/timezone) /etc/localtime && \
    apk del tzdata

WORKDIR /app

# 复制项目文件
COPY go.mod go.sum ./
RUN go mod download

# air 配置文件
COPY .air.toml ./

# 暴露端口
EXPOSE 8080

# 使用 air 运行应用（支持热重载）
CMD ["air", "-c", ".air.toml"] 